/* pages/my/my.wxss */
.noLogin {
    width: 100%;
    padding: 40rpx 0 0;
    background-color: #fff;
}

.face {
    display: flex;
    width: 250rpx;
    height: 250rpx;
    margin: 0 auto;
    border-radius: 50%;
    border: 1px solid #999;
}

.nickname {
    text-align: center;
    font-size: 35rpx;
    color: #999;
    margin-top: 20rpx;
}
.btn{
    border: 1px solid #999;
}

.userinfo {
    box-sizing: border-box;
    width: 100%;
    padding: 30rpx;
    background-color: #fff;
    border-radius: 10rpx;
}

.user-avatar-wrapper,
.user-avatar {
    display: flex;
    margin: 0 auto;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.user-nickname {
    text-align: center;
    color: #999;
    font-size: 28rpx;
    margin: 20rpx 0;
}

.menu-list {
    width: 100%;
}

.menu-item {
    position: relative;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fff;
    color: #7fabfd;
    font-size: 28rpx;
    margin: 20rpx 10rpx;
    box-sizing: border-box;
    padding-left: 50rpx;
    box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
    border-radius: 10rpx;
}

.next-icon {
    position: absolute;
    top: 50%;
    right: 50rpx;
    transform: translateY(-50%);
    width: 45rpx;
    height: 45rpx;
}