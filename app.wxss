/*
    课程样式
 */

.menu-list {
    padding: 0 10px;
}

.body-content {
    box-sizing: border-box;
    height: 600px;
}


.menu-item {
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
    margin-bottom: 10px;
}

.menu-info {
    flex: 1;
    padding: 20rpx;
    box-sizing: border-box;
}

.menu-image-wrapper {
    margin-right: 20rpx;
}

.menu-image-wrapper,
.menu-image {
    width:100%;
    height:244rpx;
}

.menu-image-wrapper .course-image {
    border-radius: 10rpx;
}

.menu-name {
    font-size: 32rpx;
    height: 32px;
    overflow:hidden;
    margin-bottom: 20rpx;
    color: #000;
}

.menu-group {
    color: #8c8c8c;
    font-size: 22rpx;
}

.menu-status {
    display: flex;
    justify-content: space-between;
    font-size: 22rpx;
    color: #8c8c8c;
    margin-top: 20rpx;
}

.menu-study-num {
    color: #399aff;
}



/*
    选项卡切换
 */

.swiper-tab{
    width: 100%;
    text-align: center;
    line-height: 40px;
    background-color: #fff;
}
.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 50%;
    color: #777777;
}
.swiper-tab-list2 {
    font-size: 30rpx;
    display: inline-block;
    width: 33.33%;
    color: #777777;
}
.on {
    color: #7fabfd;
    border-bottom: 5rpx solid #7fabfd;
}

.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
    background-color: #fff;
}

.bc_red{
    background-color: #7fabfd;
}

.bc_gray{
    background-color: #5e5e5e;
}
